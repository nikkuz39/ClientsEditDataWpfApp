<Window x:Class="ClientsEditDataWpfApp.EditorClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientsEditDataWpfApp"
        mc:Ignorable="d"
        Title="Editor" Height="700" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Card code:" VerticalAlignment="Center" />
        <TextBlock Text="Start date:" Grid.Row="1" VerticalAlignment="Center" />
        <TextBlock Text="Finish date:" Grid.Row="2" VerticalAlignment="Center" />
        <TextBlock Text="Lastname:" Grid.Row="3" VerticalAlignment="Center" />
        <TextBlock Text="Firstname:" Grid.Row="4" VerticalAlignment="Center" />
        <TextBlock Text="Surname:" Grid.Row="5" VerticalAlignment="Center" />
        <TextBlock Text="Gender:" Grid.Row="6" VerticalAlignment="Center" />
        <TextBlock Text="Birthday:" Grid.Row="7" VerticalAlignment="Center" />
        <TextBlock Text="Phone home:" Grid.Row="8" VerticalAlignment="Center" />
        <TextBlock Text="Phone mobil:" Grid.Row="9" VerticalAlignment="Center" />
        <TextBlock Text="Email:" Grid.Row="10" VerticalAlignment="Center" />
        <TextBlock Text="City:" Grid.Row="11" VerticalAlignment="Center" />
        <TextBlock Text="Street:" Grid.Row="12" VerticalAlignment="Center" />
        <TextBlock Text="House:" Grid.Row="13" VerticalAlignment="Center" />
        <TextBlock Text="Apartment:" Grid.Row="14" VerticalAlignment="Center" />

        <TextBox Text="{Binding CardCode}" Grid.Column="1" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding StartDate}" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding FinishDate}" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Lastname}" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Firstname}" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Surname}" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Gender}" Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Birthday}" Grid.Column="1" Grid.Row="7" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding PhoneHome}" Grid.Column="1" Grid.Row="8" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding PhoneMobil}" Grid.Column="1" Grid.Row="9" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Email}" Grid.Column="1" Grid.Row="10" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding City}" Grid.Column="1" Grid.Row="11" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Street}" Grid.Column="1" Grid.Row="12" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding House}" Grid.Column="1" Grid.Row="13" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />
        <TextBox Text="{Binding Apartment}" Grid.Column="1" Grid.Row="14" VerticalAlignment="Center" Height="20" Width="100" Margin="5" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="15" Grid.ColumnSpan="2">
            <Button IsDefault="True" Click="EditorClientAccept_Click" Height="20" Width="50" Margin="5" Content="Ok" />
            <Button IsCancel="True" Height="20" Width="50" Margin="5" Content="Cancel" />
        </StackPanel>

    </Grid>
</Window>
